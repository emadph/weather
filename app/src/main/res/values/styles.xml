<resources>
    <!--Font styiling for Yekan -->
    <style name="TextTitlePrimary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="TextTitlePrimaryBold" parent="TextTitlePrimary">
        <item name="android:textAppearance">@style/TextAppearance.Bold</item>
    </style>

    <style name="TextBodyPrimary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/subTitleDark</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="TextBodySecondary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/subTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>


    <!--fonts-->

    <style name="TextAppearance.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ir_yekan_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
    </style>


    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <!--        <item name="android:fontFamily">@font/appfont_block_regular</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.Widget.ProgressButton" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.Body.White</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>

    <style name="Widget.ProgressButton" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton</item>
        <item name="android:background">@drawable/progress_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>