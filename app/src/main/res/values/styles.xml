<resources>
    <!-- Base application theme. -->

    <!--Text styiling for black button, with selector-->

    <!--Font styiling for Yekan -->
    <style name="TextTitlePrimary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="TextTitlePrimaryBold" parent="TextTitlePrimary">
        <item name="android:textAppearance">@style/TextAppearance.Bold</item>
    </style>

    <style name="TextBody">
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/subTitle</item>
    </style>

    <style name="TextBodyPrimary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/subTitleDark</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="TextBodySecondary" parent="Theme.Weather">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/subTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <!--Font styiling for Peyda -->

    <style name="TextTitlePrimaryBoldPeyda" parent="TextTitlePrimary">
        <item name="android:textAppearance">@style/TextAppearancePeyda.Bold</item>
    </style>

    <!--fonts-->

    <style name="TextAppearancePeyda.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/peyda_bold</item>
    </style>

    <style name="TextAppearance.Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ir_yekan_regular</item>
    </style>

    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:tabStripEnabled">false</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">@dimen/size_3dp</item>
        <item name="android:singleLine">true</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/title</item>
        <item name="tabTextColor">@color/subTitle</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="SubTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">@dimen/size_25dp</item>
        <item name="tabPaddingEnd">@dimen/size_25dp</item>
        <item name="tabPaddingTop">@dimen/size_7dp</item>
        <item name="tabPaddingBottom">@dimen/size_8dp</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="tabBackground">@drawable/sub_tab_background</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabSelectedTextColor">@color/bg_button</item>
        <item name="tabTextColor">@color/title</item>
        <item name="tabTextAppearance">@style/SubTabTextStyle</item>
    </style>

    <style name="TabTextStyle" parent="TextBodyPrimary">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubTabTextStyle" parent="TextTitlePrimary">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>

    </style>

    <style name="Widget.App.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.App.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <!--        <item name="android:fontFamily">@font/appfont_block_regular</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ThemeOverlay.Widget.ProgressButton" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.Body.White</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>

    <style name="Widget.ProgressButton" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton</item>
        <item name="android:background">@drawable/progress_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>