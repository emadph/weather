<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvError"
        style="@style/TextBodySecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16dp"
        android:fontFamily="@font/ir_yekan_bold"
        android:gravity="center"
        android:text="@string/msg_error_List"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnRetry"
        app:layout_constraintStart_toStartOf="@+id/btnRetry"
        app:layout_constraintTop_toBottomOf="@+id/btnRetry"
        app:layout_constraintVertical_bias="0.0" />

    <ir.pourahmadi.weather.presentation.components.ProgressButton
        android:id="@+id/btnRetry"
        style="@style/Widget.ProgressButton.Black"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_32dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:minWidth="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="@string/lbl_Btn_retry" />

</androidx.constraintlayout.widget.ConstraintLayout>